{% macro renderNavigation(menuTree) %}
    {% set level = level + 1 %}
    {% if level == 1 %}
        <ul class="submenu level-{{ level }}" aria-hidden="false">
            {% for node in menuTree.children %}
                {{ link(node) }}
            {% endfor %}
        </ul>
    {% else %}
        <ul class="submenu level-{{ level }}" aria-hidden="true">
            {% for node in menuTree.children %}
                {{ link(node) }}
            {% endfor %}
        </ul>
    {% endif %}
{% endmacro %}